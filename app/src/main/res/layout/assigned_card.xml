<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingTop="2dp"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             tools:context="com.example.nirav.lyearn.AssignedCardFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:layout_margin="5dp"
        android:clickable="true"
        card_view:cardCornerRadius="2dp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/assignedCard"
            android:background="@drawable/button_rect_list_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseTitle"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:text="Introduction to Twitter compliance"
                android:textColor="@android:color/black"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberOfCards"
                android:text="12 cards"
                android:paddingBottom="8dp"
                android:textColor="@color/secondaryFontColor"
                android:layout_below="@+id/courseTitle"
                android:paddingLeft="16dp"/>

            <View
                android:layout_width="match_parent"
                android:background="#1f000000"
                android:layout_height="1dp"
                android:id="@+id/separatorLine1"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/numberOfCards"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/estimatedTimeLabel"
                android:text="Estimated Time: "
                android:textColor="@color/secondaryFontColor"
                android:layout_below="@+id/separatorLine1"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/estimatedTimeValue"
                android:text="2 minutes"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/estimatedTimeLabel"
                android:layout_below="@+id/separatorLine1"
                android:paddingTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dueDateTimeLabel"
                android:text="Due: "
                android:textColor="@color/secondaryFontColor"
                android:layout_below="@+id/estimatedTimeLabel"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dueDateTimeValue"
                android:text="19 May, 13:00 hrs"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/dueDateTimeLabel"
                android:layout_below="@+id/estimatedTimeLabel"
                android:paddingTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/assignedByLabel"
                android:text="Assigned by: "
                android:textColor="@color/secondaryFontColor"
                android:layout_below="@+id/dueDateTimeLabel"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/assignedByValue"
                android:text="Nirav Faraswami"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/assignedByLabel"
                android:layout_below="@+id/dueDateTimeLabel"
                android:paddingTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actionButton"
                android:text="RESUME"
                android:layout_gravity="right"
                android:padding="16dp"
                android:textSize="16sp"
                android:textColor="@color/myPrimaryColor"
                android:textStyle="bold"
                android:layout_below="@+id/assignedByLabel"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_below="@+id/actionButton"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>
